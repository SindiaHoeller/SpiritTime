@page "/newtask" 
@page "/newtask/{current}" 

@layout EmptyLayout

<div>
    @if (TaskDto.Id == 0)
    {
        <label @ref="newTask" class="" tabindex="3"><i class="fas fa-plus-circle"></i> Task:</label>
    }
    else
    {
        <label @ref="newTask" class="" tabindex="3"><i class="fas fa-pencil-alt"></i> Current:</label>
    }
</div>
<div>
    <input @ref="inputBox" class="form-control" @bind="TaskDto.Name" type="text" id="name" placeholder="Name"
            @onkeydown="e => Submit(e)" tabindex="1"/>
</div>
<div class="flex-grow-1">
    <input class="form-control" @bind="TaskDto.Description" type="text" id="description" placeholder="Description"
           @onkeydown="e => Submit(e)" tabindex="2"/>
</div>
