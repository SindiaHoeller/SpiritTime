@page "/tags/overview"
@using SpiritTime.Shared.Models.TagModels

<div class="center-and-highlight">
    <div class="col-12 custom-background mt-5">
        <div class="text-center">
            <div class="text-right">
                <button class="custom-small-button" @onclick="Add">@TextMsg.TagAdd</button>
            </div>
            <h1>@SD.Tag</h1>

        </div>
        @if (ShowError && ErrorMsg != null)
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMsg
            </div>
        }
        @if (TableService.Objects == null || !(bool) TableService.Objects?.Any())
        {
            <NoElementsPage NoElements="@NoElements"></NoElementsPage>
        }
        else
        {
            <table class="table">
                <thead>
                <tr>
                    <th>
                        <span class="oi @(TableService.GetSortStyle(nameof(TagDto.Name)))"
                              @onclick="@(() => TableService.SortTable(nameof(TagDto.Name)))">
                        </span>
                        <span class="pl-3">@nameof(TagDto.Name)</span>
                    </th>
                    <th>
                        <span class="oi @(TableService.GetSortStyle(nameof(TagDto.WorkspaceName)))"
                              @onclick="@(() => TableService.SortTable(nameof(TagDto.WorkspaceName)))">
                        </span>
                        <span class="pl-3">@nameof(TagDto.WorkspaceName)</span>
                    </th>
                    <th>
                        <span class="oi @(TableService.GetSortStyle(nameof(TagDto.ColorCode)))"
                              @onclick="@(() => TableService.SortTable(nameof(TagDto.ColorCode)))">
                        </span>
                        <span class="pl-3">@nameof(TagDto.ColorCode)</span>
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in TableService.Objects)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.WorkspaceName</td>
                        <td>
                            @{ var color = String.IsNullOrEmpty(item.ColorCode) ? "#D4C19C" : item.ColorCode; }
                            <p style="background-color: @color">@item.ColorCode</p>
                        </td>
                        <td class="d-flex align-items-center justify-content-center">
                            <Tooltip Text="Edit" Placement="Placement.Left">
                                <button class="custom-small-button mr-1" @onclick="@(() => Update(item))">
                                    <span class="oi oi-pencil"></span>
                                </button>
                            </Tooltip>
                            <Tooltip Text="Delete" Placement="Placement.Right">
                                <button class="custom-small-button trash" @onclick="@(() => Remove(item.Id))">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </Tooltip>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>