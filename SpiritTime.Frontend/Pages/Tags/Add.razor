@if (ShowForm)
{
    <div class="simple-form">
        <div class="form-group my-3">
            <label for="unit-name">@Text.TagName:</label>
            <input @bind="Item.Name" type="text" class="form-control" id="unit-name" placeholder="@Text.TagName" />
        </div>

        <div class="form-group my-3">
            <label for="unit-name">@Text.Workspace:</label>
            <EditForm Model="Item">
                <InputSelect Id="list" @bind-Value="@Id" class="form-control">
                    @foreach (var item in WorkspaceList)
                    {
                        <option value="@item.Id">@item.Name </option>
                    }
                </InputSelect>
            </EditForm>
        </div>
        <div class="text-center pt-5 mt-5">
            <button @onclick="SubmitForm" class="custom-small-button">@Text.Confirm</button>
            <button @onclick="Cancel" class="custom-small-button trash">@Text.Abort</button>
        </div>
        

    </div>
}
else if (ShowErrorForm)
{
    <div class="alert alert-danger" role="alert">
        @ErrorMsg.NameCanNotBeEmpty<br />
        <button class="custom-small-button" @onclick="Cancel">@Text.Done</button>
    </div>
}
else if(ShowSuccessForm)
{
    <div class="alert alert-success text-center" role="alert">
        @SuccessMsg.TagAdded @Item.Name <br />
        <button class="custom-small-button" @onclick="Done">@Text.Done</button>
    </div>
}